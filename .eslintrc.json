{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "writable",
		"SharedArrayBuffer": "writable"
	},
	"parserOptions": {
		"ecmaVersion": 2019
	},
	"rules": {
		"indent": ["warn", "tab", {"SwitchCase": 1}],
		"no-undef": 0,
		"no-unused-vars": 1,
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"warn",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
