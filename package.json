{
    "name": "downthedungeon",
    "version": "1.0.0",
    "description": "Web based roguelike",
    "main": "server.cjs",
    "type": "module",
    "base": "./build",
    "directories": {
        "lib": "lib"
    },
    "scripts": {
        "build": "tsc",
        "serve": "node ./build/server.cjs",
        "watch": "tsc -w",
        "cleanBuild": "find ./build -name '*.js' -type f -delete && find ./build -name '*.js.map' -type f -delete && npm run build",
        "test": "jest"
    },
    "author": "Caden Popps",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.20",
        "jest": "^29.7.0",
        "serve": "^14.2.1",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
